using Gtk 4.0;

ShortcutsWindow help_overlay {
  modal: true;
  title: _("Clapgrep Shortcuts");

  ShortcutsSection {
    ShortcutsGroup {
      title: _("General");

      ShortcutsShortcut {
        title: _("Quit");
        action-name: "app.quit";
      }

      ShortcutsShortcut {
        title: _("Shortcuts");
        action-name: "app.shortcuts";
      }
    }

    ShortcutsGroup {
      title: _("Control Search");

      ShortcutsShortcut {
        title: _("Start Search");
        action-name: "win.start-search";
      }

      ShortcutsShortcut {
        title: _("Stop Search");
        action-name: "win.stop-search";
      }
    }
  }
}
